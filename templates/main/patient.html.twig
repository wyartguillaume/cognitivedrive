{% extends 'base.html.twig' %}
{% block title %} {% endblock %}


{% block body %}
<div class="col-lg-12">
{% if app.user %}
<h2 style="color:#CF9797; text-align:center;">La liste de vos patients</h2>
<br>
<table class="table table-hover">
<thead>
 <tr class="table-primary">
      <th scope="col">Pseudo</th>
      <th scope="col">Sexe</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Lateralite</th>
      <th scope="col">Groupe</th>
      <th scope="col">Date de derniere visite</th>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Email</th>
      <th scope="col">Profession</th>
      <th scope="col">Etat Civil</th>
      <th scope="col">Nombre d'enfants</th>
      <th scope="col">Nombre de visite</th>
      <th scope="col">Trouble de sommeil</th>
      <th></th>
    </tr>
</thead>
<tbody>
{% for p in patients %}
    <tr class="table-secondary">
        <td>{{p.pseudo}}</td>
        <td>{{p.sexe}}</td>
        <td>{{p.dateDeNaissance|date("d/m/Y")}}</td>
        <td>{{p.lateralite}}</td>
        <td>{{p.groupe}}</td>
        <td>{{p.dateDerniereVisite|date("d/m/Y")}}</td>
        <td>{{p.nom}}</td>
        <td>{{p.prenom}}</td>
        <td>{{p.email}}</td>
        <td>{{p.profession}}</td>
        <td>{{p.etatCivil}}</td>
        <td>{{p.nbrEnfants}}</td>
        <td>{{p.nbrVisite}}</td>
        <td>{{p.troubleDeSommeil}}</td>
        <td><a class="btn btn-primary btn-lg" href="{{path('consultation', {'id': p.id})}}" role="button">Voir ses statistiques</a></td>
    </tr>
{% endfor %}   
</tbody>
</table>
{% else %}
    <h1 style="color:#CF9797; text-align:center;">Accès non autorisé!!<h2>
{% endif %}    
</div>


{% endblock %} 