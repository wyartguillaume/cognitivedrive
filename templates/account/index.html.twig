{% extends 'base.html.twig' %}

{% block title %}Votre profil {{user.nom}} {{user.prenom}}{% endblock %}

{% block body %}
<div class="container">
<h1>Votre profil {{user.nom}} {{user.prenom}}</h1>
    <div class="mt-3">
        <a href="{{path('account_profile')}}" class="btn btn-primary mr-2 mb-2">Modifier mon profil</a>
        <a href="{{path('account_password')}}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
    </div>
    <div class="jumbotron">
    <div class="row">
        <div class="col-1">
            <p>Nom:</p>
            <p>Prenom:</p>
            <p>Email:</p>
        </div>
        <div class="col-11">
            <p>{{user.nom}}</p>
            <p>{{user.prenom}}</p>
            <p>{{user.email}}</p>
        </div>
    </div>
    <h2>Mes patients</h2>
    {% if patient | length > 0 %}
    
            <p>Nombre de patient:  <span style= "color: red;">{{patient | length}}</span></p><br>
            <h3 style= "color: green;">Leurs pseudos</h3>
            <ul class="list-group list-group-flush">
            {% for p in patient %}
                <li class="list-group-item">{{p.pseudo}}</li>
            {% endfor %}
            </ul>
            <br>
            <a class="btn btn-primary btn-lg" role="button" href="{{path('patient')}}">Voir plus en d√©tail</a>
    {% else %}
        <div class="alert alert-warning">
            <p>
                <strong> Vous n'avez pas encore de patients </strong>
            </p>
        </div>
                
    {% endif %}
    </div>
</div>

{% endblock %}
