{% extends 'base.html.twig' %}

{% block title %}Connexion du patient!{% endblock %}

{% block body %}
<div class="container">
    <h1> Connexion du patient</h1>
    <div class="row">
        <div class="col-md-6">

            <form action="{{path('connexion_patient')}}" method="post">
                <div class="form-group">
                    <input placeholder="pseudo..." required name="pseudo" type="text" class="form-control">
                    <br>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion</button>
                </div>
            </form>
            <p>Pas encore inscris?<a href="{{path('inscription_patient')}}"> Inscrivez-vous</a></p>
        </div>
    </div>
</div>
{% endblock %}