{% extends 'base.html.twig' %}

{% block title %}Inscription!{% endblock %}

{% block body %}
<div class="container">
    <h1>Inscription</h1>
    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
            {{ form_row(form.nom, {'label': 'Nom d\'utilisateur','attr': {'placeholder': "Votre nom ..."}}) }}
            {{ form_row(form.prenom,{'label': 'Prenom d\'utilisateur','attr': {'placeholder': "Votre prenom ..."}}) }}
            {{ form_row(form.email,{'label': 'Adresse mail','attr': {'placeholder': "Votre mail ..."}}) }}
            {{ form_row(form.motDePasse,{'label': 'Mot de passe','attr': {'placeholder': "Votre mot de passe ..."}}) }}
            {{ form_row(form.confirm_motDePasse,{'label': 'Confirmation','attr': {'placeholder': "Retapez votre mot de passe"}}) }}
            {{form_row(form.isRgpd, {'label': 'En cliquant sur « Inscription », j\'accepte que CognitiveDrive puisse utiliser et traiter mes données personnelles en accord
             avec notre politique de respect de la vie privée'})}}
            <p>Vous trouverez notre politique sur <a href="{{path('rgpd')}}">ce lien</a></p>
            
            <div class="g-recaptcha" 
          data-sitekey="6Le0DpsUAAAAABmlgtHfMVuGzrcvuPYBz2rJ7sag">
          </div>
          <hr>
            <button type="submit" class="btn btn-success">Inscription!</button>
            {{ form_end(form) }}
            <p>Déja inscris?<a href="{{path('connexion_user')}}"> Connectez-vous!</a></p>
        </div>
    </div>
</div>
{% endblock %}