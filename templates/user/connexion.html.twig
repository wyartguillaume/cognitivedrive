{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<div class="container">
    <h1> Connexion </h1>
    <div class="row">
        <div class="col-md-6">
        {% if hasError %}
        <div class="alert alert-danger">Nom d'utilisateur ou mot de passe incorrect</div>
        {% endif %}
            <form action="{{path('connexion_user')}}" method="post">
                <div class="form-group">
                    <input placeholder="Adresse email..." required name="_username" type="text" class="form-control" value="{{username}}">
                    <br>
                    <input placeholder="Mot de passe..." required name="_password" type="password" class="form-control">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Connexion</button>
                    {% if inactiveAccount %}
                        <div class="alert alert-danger"> {{inactiveAccount}}</div>
                    {% endif %}
                    
                </div>
            </form>
            <p>Pas encore inscrit?<a href="{{path('inscription_user')}}">Inscrivez-vous</a></p>
        </div>
    </div>
</div>
{% endblock %}
